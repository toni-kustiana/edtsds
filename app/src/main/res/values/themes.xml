<resources>
    <!-- Base application theme. -->
    <style name="Theme.EdtsDSExample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary30</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="EdtsDialog" parent="Animation.Design.BottomSheetDialog">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BoardingStyle" parent="InterMedium">
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">26dp</item>
        <item name="android:textColor">@color/colorNeutral70</item>
    </style>
</resources>