<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry">

    <id.co.edtslib.edtsds.ButtonView
        android:id="@+id/buttonView"
        android:layout_gravity="center"
        android:text="Show Tray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_12dp"
        app:layout_constraintTop_toBottomOf="@id/buttonView"
        app:layout_constraintStart_toStartOf="@id/buttonView"
        app:layout_constraintEnd_toEndOf="@id/buttonView">
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchIntercept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intercept Tray Close"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <id.co.edtslib.edtsds.bottom.BottomLayout
            android:id="@+id/bottomLayout"
            app:contentLayout="@layout/view_content"
            app:bottomLayoutType="flat"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <View
            android:background="@color/colorNeutral20"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>