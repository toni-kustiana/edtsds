<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry">
    <id.co.edtslib.edtsds.chips.sliding.SlidingChipsView
        android:id="@+id/slidingChipView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:clipToPadding="false"
        app:slideChipIconPaddingEnd="@dimen/dimen_8dp"
        app:slideChipIconPaddingStart="@dimen/dimen_8dp"
        app:slideChipIconSize="@dimen/dimen_20dp"
        app:slideChipTextStyle="@style/H3" />

    <id.co.edtslib.edtsds.myapplication.SlidingStepperView
        android:id="@+id/slidingStepperView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:listitem="@layout/adapter_stepper"
        />
</LinearLayout>