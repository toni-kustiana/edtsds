<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry">
    <id.co.edtslib.edtsds.textfield.TextFieldView
        app:boxBackgroundMode="none"
        app:boxStrokeWidth="@dimen/dimen_1dp"
        app:boxStrokeColor="@color/colorPrimary10"
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        app:ellipsize="true"
        app:imeOptions="search"
        app:inputType="search" />

    <Button
        android:id="@+id/btnShowTray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Tray"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_gravity="center"/>
</LinearLayout>