<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_4dp" />
            <solid android:color="@color/colorNeutral10" />
            <stroke android:color="@color/colorNeutral30" android:width="@dimen/dimen_1dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/dimen_4dp"
                android:topLeftRadius="@dimen/dimen_4dp"/>
            <solid android:color="@color/colorNeutral10" />
            <stroke android:color="@color/colorNeutral30" android:width="@dimen/dimen_1dp" />
        </shape>
    </item>
</selector>